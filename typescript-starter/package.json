{
  "name": "typescript-starter",
  "version": "1.0.0",
  "description": "nitric typescript starter template",
  "main": "index.js",
  "private": true,
  "dependencies": {
    "@nitric/sdk": "latest"
  },
  "devDependencies": {
    "dotenv": "^16.0.2",
    "nodemon": "^2.0.20",
    "stmux": "^1.8.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3",
    "wait-port": "^1.0.1"
  },
  "scripts": {
    "dev:functions": "nodemon -r dotenv/config ./functions/*.ts",
    "dev": "stmux -w always -e ERROR -M -m beep,system -- [ \"nitric start\" .. \"wait-port localhost:50051 && npm run dev:functions\" ]"
  }
}
